<style>
  .grid20 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .chair {
    width: 40%;
    padding-left: 450px;
    animation: swingChair 2s ease-in-out infinite alternate; /* Gynger i 2 sekunder frem og tilbage uendeligt */
    transform-origin: bottom;
  }

  @keyframes swingChair {
    0% {
      transform: rotate(3deg);
    }
    100% {
      transform: rotate(-3deg);
    }
  }

  @media (max-width: 800px) {
    .chair {
      width: 70%;
      padding-left: 40px;
    }
    .hearts {
      width: 40%;
      padding-top: 100px;
      padding-left: 10px;
    }
  }

  .hearts {
    width: 40%;
    padding-top: 100px;

    overflow: hidden;
    animation: pulse 1.3s infinite alternate;
    opacity: 0.8;
  }

  @keyframes pulse {
    0% {
      transform: scale(1);
      opacity: 0.9;
    }
    100% {
      transform: scale(1.1);
      opacity: 6;
    }
  }
</style>
