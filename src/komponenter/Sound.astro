<html>
  <img
    id="playButton"
    src="/sound.svg"
    alt="Afspil lyd"
    onclick="playAudio()"
  />

  <audio id="audioPlayer">
    <source src="ocean.mp3" type="audio/mpeg" />
    Din browser underst√∏tter ikke afspilning af MP3-lyd.
  </audio>


  <style>
    #playButton {
      height: 40%;
      width: 10%;
      display: flex;
      align-items: end;
      justify-content: end;
    }
  </style>

  <script>
    const playButton = document.getElementById("playButton");
    const audioPlayer = document.getElementById("audioPlayer");

    playButton.addEventListener("click", playSound);

    function playSound() {
      console.log("paused?", audioPlayer.paused);
      if (audioPlayer.paused) {
        audioPlayer.play();
      } else {
        audioPlayer.pause();
      }
    }
  </script>
