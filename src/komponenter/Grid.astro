<style>
  * {
    margin: 0;
    padding: 0;
  }
  section {
    display: grid;
  }
  section > img {
    grid-area: 1/1;
    align-self: start;
  }
  img {
    width: 30%;
    height: auto;
  }

  .grid_1 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    gap: 0px;
    grid-area: 1/1;
  }

  .grid1_11 {
    background-color: #d1ecef;
    text-align: center;
    padding-top: 30px;
    padding-bottom: 30px;
  }

  .grid1_12 {
    background-color: #fff5eb;
    align-content: center;
  }

  .grid1_21 {
    background-color: #fff5eb;
  }

  .grid1_22 {
    background-color: #d1ecef;
    /* background-color: red; */
    text-align: center;
    padding-top: 20px;
  }

  .grid_1 > div {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }

  h5 {
    color: #1d1d1b;
    font-size: 30px;
    font-family: "archivo-variable", sans-serif;
    font-family: "archivo-narrow-variable", sans-serif;
    font-variation-settings: "wght" 400;
  }
  @media (max-width: 800px) {
    h5 {
      color: #1d1d1b;
      font-size: 18px;
      font-family: "archivo-variable", sans-serif;
      font-variation-settings:
        "wdth" 100,
        "wght" 600;
      font-family: "archivo-narrow-variable", sans-serif;
      font-variation-settings: "wght" 400;
    }
  }
</style>
