---
import MainLayout from "../layout/MainLayout.astro";
import "../style/style.css";
import Grid from "../komponenter/Grid.astro";

import Fod from "../komponenter/Fod.astro";
import TaleBobler from "../komponenter/TaleBobler.astro";
import Overskift from "../komponenter/Overskift.astro";
import Sound from "../komponenter/Sound.astro";
import Grid2 from "../komponenter/Grid2.astro";
import Baggrund from "../komponenter/Baggrund.astro";
import Baggrund1 from "../komponenter/Baggrund1.astro";
import Baggrund2 from "../komponenter/Baggrund2.astro";
import Baggrund3 from "../komponenter/Baggrund3.astro";
import Stol from "../komponenter/Stol.astro";
import Phone from "../komponenter/Phone.astro";
---

<MainLayout />

<article>
  <div class="container">
    <div class="hearts">
      <img src="/hearts.png" alt="hearts" />
    </div>
  </div>
  <Overskift />

  <div class="hearts">
    <img src="/hearts.png" alt="hearts" />
  </div>
</article>
<article>
  <div class="rounded-box">
    <h2>SISTERHOOD: ET STÆRKT FÆLLESSKAB</h2>
    <p>
      For dig, der er mellem 16 og 24 år og bor omkring Odense eller Aalborg.
    </p>
    <div class="inner-box">
      <p>#EMPOWERMENT #FÆLLESSKAB #STØTTE #SELVUDVIKLING #SISTERHOOD</p>
    </div>
  </div>
</article>
<div class="karlas_historie">
  <h2>KARLAS HISTORIE</h2>
  <Sound />
  <div class="water">
    <img src="/water.svg" alt="hearts" />
  </div>
  <Baggrund1 />
  <img src="" alt="" />
  <Baggrund2 />

  <Stol />

  <Baggrund3 />
</div>

<TaleBobler />
<Grid />
<Baggrund />
<Phone />

<h1>HVAD SIGER ANDRE PIGER?</h1>
<Grid2 />
<Fod />

<footer></footer>

<style>
  .water {
    display: flex;
    justify-content: center;
  }
  .water img {
    width: 50%;
    padding-bottom: 50px;
    padding-top: 50px;
  }
  .container {
    display: flex;
    justify-content: flex-end;
  }

  .hearts {
    width: 20%;
    padding-top: 100px;
    padding-right: 200px;
    overflow: hidden;
    animation: pulse 1.3s infinite alternate;
    opacity: 0.8;
  }

  @keyframes pulse {
    0% {
      transform: scale(1);
      opacity: 0.9;
    }
    100% {
      transform: scale(1.1);
      opacity: 6;
    }
  }

  .rounded-box {
    width: 900px;
    height: 560px;
    background-color: #fff5eb;
    border-radius: 40px;
    position: relative;
  }

  .inner-box {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 340px;
    height: 110px;
    background-color: #fc4d5c;
    border-radius: 30px;
  }
</style>
